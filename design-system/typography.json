{
  "fonts": {
    "primary": {
      "family": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
      "weights": {
        "light": 300,
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700,
        "black": 900
      },
      "usage": "Body text, UI elements, general content"
    },
    "heading": {
      "family": "'Space Grotesk', 'Inter', sans-serif",
      "weights": {
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "usage": "Headings, titles, hero text"
    },
    "mono": {
      "family": "'JetBrains Mono', 'Fira Code', 'Consolas', monospace",
      "weights": {
        "regular": 400,
        "medium": 500,
        "bold": 700
      },
      "usage": "Code blocks, cheatsheets, technical content"
    }
  },
  "scale": {
    "hero": {
      "size": "4rem",
      "lineHeight": "1.1",
      "weight": 700,
      "usage": "Homepage hero, landing pages"
    },
    "h1": {
      "size": "3rem",
      "lineHeight": "1.2",
      "weight": 700
    },
    "h2": {
      "size": "2.25rem",
      "lineHeight": "1.3",
      "weight": 600
    },
    "h3": {
      "size": "1.875rem",
      "lineHeight": "1.4",
      "weight": 600
    },
    "h4": {
      "size": "1.5rem",
      "lineHeight": "1.4",
      "weight": 600
    },
    "h5": {
      "size": "1.25rem",
      "lineHeight": "1.5",
      "weight": 600
    },
    "h6": {
      "size": "1.125rem",
      "lineHeight": "1.5",
      "weight": 600
    },
    "body": {
      "size": "1rem",
      "lineHeight": "1.6",
      "weight": 400
    },
    "small": {
      "size": "0.875rem",
      "lineHeight": "1.5",
      "weight": 400
    },
    "tiny": {
      "size": "0.75rem",
      "lineHeight": "1.4",
      "weight": 400
    }
  },
  "responsive": {
    "mobile": {
      "hero": "2.5rem",
      "h1": "2rem",
      "h2": "1.75rem",
      "h3": "1.5rem"
    },
    "tablet": {
      "hero": "3rem",
      "h1": "2.5rem",
      "h2": "2rem",
      "h3": "1.75rem"
    }
  }
}
